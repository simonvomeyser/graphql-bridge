    "graphql-request": "^1.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.11.0",
    "eslint-config-prettier": "^2.8.0",
    "eslint-loader": "^1.9.0",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "path": "^0.12.7",
    "prettier": "^1.8.2",
